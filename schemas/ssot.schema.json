{
  "$schema": "https://frictionlessdata.io/schemas/table-schema.json",
  "name": "hotpass_ssot",
  "title": "Hotpass single source of truth",
  "description": "Schema for the refined Hotpass dataset exported via the pipeline",
  "primaryKey": ["organization_slug"],
  "fields": [
    {"name": "organization_name", "type": "string", "constraints": {"required": true}},
    {"name": "organization_slug", "type": "string", "constraints": {"required": true}},
    {"name": "province", "type": "string"},
    {"name": "country", "type": "string"},
    {"name": "area", "type": "string"},
    {"name": "address_primary", "type": "string"},
    {"name": "organization_category", "type": "string"},
    {"name": "organization_type", "type": "string"},
    {"name": "status", "type": "string"},
    {"name": "website", "type": "string"},
    {"name": "planes", "type": "string"},
    {"name": "description", "type": "string"},
    {"name": "notes", "type": "string"},
    {"name": "source_datasets", "type": "string", "constraints": {"required": true}},
    {"name": "source_record_ids", "type": "string", "constraints": {"required": true}},
    {"name": "contact_primary_name", "type": "string"},
    {"name": "contact_primary_role", "type": "string"},
    {"name": "contact_primary_email", "type": "string"},
    {"name": "contact_primary_phone", "type": "string"},
    {"name": "contact_secondary_emails", "type": "string"},
    {"name": "contact_secondary_phones", "type": "string"},
    {"name": "data_quality_score", "type": "number"},
    {"name": "data_quality_flags", "type": "string"},
    {"name": "selection_provenance", "type": "string"},
    {"name": "last_interaction_date", "type": "string"},
    {"name": "priority", "type": "string"},
    {"name": "privacy_basis", "type": "string"}
  ]
}
